# Application settings
# APP_NAME=Stremio AI Companion
# APP_VERSION=0.0.1
# APP_DESCRIPTION=Your AI-powered movie discovery companion for Stremio
# STREMIO_ADDON_ID=ai.companion.stremio

# Server settings
# HOST=0.0.0.0
# PORT=8000

# Logging
# LOG_LEVEL=INFO

# Security
# REQUIRED: Custom encryption key for config URLs
# This must be set for the application to start
ENCRYPTION_KEY=your-custom-encryption-key-here

# API settings
# OpenAI/OpenRouter API configuration
# OPENAI_API_KEY=sk-...
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# DEFAULT_MODEL=openai/gpt-5-mini:online

# TMDB settings
# Use your TMDB v4 Read Access Token
# TMDB_API_KEY=your-tmdb-read-access-token

# RPDB (PosterDB) settings
# RPDB_API_KEY=your-rpdb-api-key

# Catalogs, manifests, and caching
# PREFERRED_USER_SEARCH_LANGUAGE=en-US
# ENABLE_FEED_CATALOGS=true
# SPLIT_MANIFESTS=false
# MAX_CATALOG_RESULTS=10
# MAX_CATALOG_ENTRIES=100
# CACHE_SEARCH_QUERY_TTL=14400

# Footer / UI
# FOOTER_ENABLED=true

# Redis cache (optional)
# If REDIS_HOST is set, REDIS_PORT/REDIS_DB will also be used
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0
